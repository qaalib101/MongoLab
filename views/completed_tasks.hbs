<h2>Completed Tasks</h2>
<div class="task-list">
    {{#if tasks}}
        <ul>
            {{#each tasks}}
                <li><a href="task/{{this._id}}">{{this.text}}</a> was created on {{this.dateCreated}} and completed on {{this.dateCompleted}}</li>
            {{/each}}
            <!-- delete button sent to /delete done route handler -->
            <form action="/delete" method="POST">
            <button id="delete">
                Delete task
            </button>
        </form>
        </ul>
    <form action="/deleteDone" method="POST">
        <button  id="delete-all-done">
            Delete completed tasks
        </button>
    {{else}}
        <p>No tasks have been completed</p>
    {{/if}}
</div>
<!-- script source -->
<script src="/javascripts/confirmDelete.js"></script>